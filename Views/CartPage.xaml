<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="tortugueroApp.Views.CartPage"
             Shell.NavBarIsVisible="False"
             BackgroundColor="#F8F9FA">

    <Grid RowDefinitions="Auto,*,Auto">
    
        <Grid Grid.Row="0" 
              BackgroundColor="#11d4b4" 
              Padding="20,40,20,20"
              ColumnDefinitions="Auto,*">
            
            <Button Grid.Column="0"
                    Text="â†"
                    FontSize="24"
                    TextColor="White"
                    BackgroundColor="Transparent"
                    Clicked="OnBackClicked"/>
            
            <Label Grid.Column="1"
                   Text="My Cart"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="White"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"/>
        </Grid>

    
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="20" Spacing="15">
                
         
                <VerticalStackLayout x:Name="EmptyCartView"
                                    IsVisible="False"
                                    Spacing="20"
                                    VerticalOptions="Center"
                                    HorizontalOptions="Center"
                                    Margin="0,100,0,0">
                    <Label Text="ðŸ›’"
                           FontSize="80"
                           HorizontalOptions="Center"/>
                    <Label Text="Your cart is empty"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="#2E4E49"
                           HorizontalOptions="Center"/>
                    <Label Text="Explore our rooms and activities"
                           FontSize="14"
                           TextColor="Gray"
                           HorizontalOptions="Center"/>
                </VerticalStackLayout>

         
                <VerticalStackLayout x:Name="CartContentView"
                                     Spacing="15">
                    
             
                    <Frame BackgroundColor="White"
                           CornerRadius="12"
                           Padding="15"
                           HasShadow="True"
                           x:Name="RoomsSection">
                        <VerticalStackLayout Spacing="10">
                            <Label Text="ðŸ  Rooms"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="#2E4E49"/>
                            <VerticalStackLayout x:Name="RoomsContainer"
                                                Spacing="10"/>
                        </VerticalStackLayout>
                    </Frame>

                
                    <Frame BackgroundColor="White"
                           CornerRadius="12"
                           Padding="15"
                           HasShadow="True"
                           x:Name="ActivitiesSection">
                        <VerticalStackLayout Spacing="10">
                            <Label Text="â›°ï¸ Activities"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="#2E4E49"/>
                            <VerticalStackLayout x:Name="ActivitiesContainer"
                                                Spacing="10"/>
                        </VerticalStackLayout>
                    </Frame>

                  
                    <Frame BackgroundColor="#11d4b4"
                           CornerRadius="12"
                           Padding="20"
                           HasShadow="True">
                        <VerticalStackLayout Spacing="10">
                            <Label Text="Summary"
                                   FontSize="20"
                                   FontAttributes="Bold"
                                   TextColor="White"/>
                            <Grid ColumnDefinitions="*,Auto">
                                <Label Text="Rooms Subtotal:"
                                       TextColor="White"
                                       FontSize="14"/>
                                <Label x:Name="SubtotalRoomsLabel"
                                       Grid.Column="1"
                                       Text="$0.00"
                                       TextColor="White"
                                       FontSize="14"
                                       FontAttributes="Bold"/>
                            </Grid>
                            <Grid ColumnDefinitions="*,Auto">
                                <Label Text="Activities Subtotal:"
                                       TextColor="White"
                                       FontSize="14"/>
                                <Label x:Name="SubtotalActivitiesLabel"
                                       Grid.Column="1"
                                       Text="$0.00"
                                       TextColor="White"
                                       FontSize="14"
                                       FontAttributes="Bold"/>
                            </Grid>
                            <BoxView HeightRequest="1"
                                    Color="White"
                                    Opacity="0.5"
                                    Margin="0,5"/>
                            <Grid ColumnDefinitions="*,Auto">
                                <Label Text="Total to Pay:"
                                       TextColor="White"
                                       FontSize="18"
                                       FontAttributes="Bold"/>
                                <Label x:Name="TotalLabel"
                                       Grid.Column="1"
                                       Text="$0.00"
                                       TextColor="White"
                                       FontSize="22"
                                       FontAttributes="Bold"/>
                            </Grid>
                        </VerticalStackLayout>
                    </Frame>

                </VerticalStackLayout>

            </VerticalStackLayout>
        </ScrollView>

     
        <Grid Grid.Row="2"
              Padding="20"
              BackgroundColor="White"
              x:Name="CheckoutButtonContainer">
            <Button x:Name="CheckoutButton"
                    Text="Proceed to Payment"
                    BackgroundColor="#11d4b4"
                    TextColor="White"
                    FontSize="18"
                    FontAttributes="Bold"
                    CornerRadius="10"
                    HeightRequest="50"
                    Clicked="OnCheckoutClicked"/>
        </Grid>

        
        <ActivityIndicator x:Name="LoadingIndicator"
                          Grid.Row="1"
                          IsRunning="False"
                          Color="#11d4b4"
                          VerticalOptions="Center"
                          HorizontalOptions="Center"/>
    </Grid>

</ContentPage>
