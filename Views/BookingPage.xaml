<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="tortugueroApp.Views.BookingPage"
             Shell.NavBarIsVisible="False"
             BackgroundColor="#F8F9FA">
    
    <Grid RowDefinitions="Auto,*">
        
       
        <Grid Grid.Row="0" 
              BackgroundColor="#11d4b4" 
              Padding="20,40,20,20"
              ColumnDefinitions="Auto,*">
            
            <Button Grid.Column="0"
                    Text="â†"
                    FontSize="24"
                    TextColor="White"
                    BackgroundColor="Transparent"
                    Clicked="OnBackClicked"/>
            
            <Label Grid.Column="1"
                   Text="Book Your Stay"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="White"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"/>
        </Grid>

     
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="20" Padding="20">
                
              
                <Frame Padding="20"
                       CornerRadius="12"
                       HasShadow="True"
                       BorderColor="Transparent"
                       BackgroundColor="White">
                    <VerticalStackLayout Spacing="15">
                        <Label Text="Select Dates"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="#2E4E49" />

                    
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Check-in Date"
                                   FontSize="14"
                                   TextColor="#6B7280" />
                            <DatePicker x:Name="CheckInDatePicker"
                                       MinimumDate="01/01/2024"
                                       Format="MMM dd, yyyy"
                                       TextColor="#2E4E49"
                                       BackgroundColor="#F3F4F6"
                                       FontSize="16"
                                       DateSelected="OnCheckInDateSelected"/>
                        </VerticalStackLayout>

                      
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Check-out Date"
                                   FontSize="14"
                                   TextColor="#6B7280" />
                            <DatePicker x:Name="CheckOutDatePicker"
                                       MinimumDate="01/01/2024"
                                       Format="MMM dd, yyyy"
                                       TextColor="#2E4E49"
                                       BackgroundColor="#F3F4F6"
                                       FontSize="16"
                                       DateSelected="OnCheckOutDateSelected"/>
                        </VerticalStackLayout>

                       
                        <HorizontalStackLayout Spacing="8" x:Name="NightsDisplay" IsVisible="False">
                            <Label Text="ðŸŒ™"
                                   FontSize="20"/>
                            <Label x:Name="NightsLabel"
                                   Text="0 nights"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="#11d4b4"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </Frame>

               
                <Frame Padding="20"
                       CornerRadius="12"
                       HasShadow="True"
                       BorderColor="Transparent"
                       BackgroundColor="White">
                    <VerticalStackLayout Spacing="16">
                        <Label Text="Guests"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="#2E4E49" />

                     
                        <Grid ColumnDefinitions="*,Auto" ColumnSpacing="16">
                            <Label Grid.Column="0"
                                   Text="Number of Guests"
                                   FontSize="16"
                                   TextColor="#6B7280"
                                   VerticalTextAlignment="Center" />
                            
                            <HorizontalStackLayout Grid.Column="1" Spacing="12">
                                <Button Text="-"
                                       x:Name="DecreaseGuestsButton"
                                       WidthRequest="40"
                                       HeightRequest="40"
                                       CornerRadius="20"
                                       BackgroundColor="#E5E7EB"
                                       TextColor="#2E4E49"
                                       FontAttributes="Bold"
                                       FontSize="20"
                                       Padding="0"
                                       Clicked="OnDecreaseGuestsClicked" />
                                <Label x:Name="GuestsLabel"
                                       Text="1"
                                       FontSize="20"
                                       FontAttributes="Bold"
                                       TextColor="#2E4E49"
                                       VerticalTextAlignment="Center"
                                       WidthRequest="30"
                                       HorizontalTextAlignment="Center" />
                                <Button Text="+"
                                       x:Name="IncreaseGuestsButton"
                                       WidthRequest="40"
                                       HeightRequest="40"
                                       CornerRadius="20"
                                       BackgroundColor="#11d4b4"
                                       TextColor="White"
                                       FontAttributes="Bold"
                                       FontSize="20"
                                       Padding="0"
                                       Clicked="OnIncreaseGuestsClicked" />
                            </HorizontalStackLayout>
                        </Grid>
                    </VerticalStackLayout>
                </Frame>

               
                <Label Text="Available Rooms"
                       FontSize="20"
                       FontAttributes="Bold"
                       TextColor="#2E4E49"
                       Margin="0,10,0,0" />

                
                <ActivityIndicator x:Name="LoadingIndicator"
                                  IsRunning="False"
                                  Color="#11d4b4"
                                  HeightRequest="50"/>

              
                <VerticalStackLayout x:Name="EmptyStateView"
                                    IsVisible="False"
                                    Spacing="10"
                                    Margin="0,40,0,0"
                                    HorizontalOptions="Center">
                    <Label Text="ðŸ¨"
                           FontSize="60"
                           HorizontalTextAlignment="Center"/>
                    <Label Text="No rooms available"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="#6B7280"
                           HorizontalTextAlignment="Center"/>
                    <Label Text="Try different dates or guest count"
                           FontSize="14"
                           TextColor="#9CA3AF"
                           HorizontalTextAlignment="Center"/>
                </VerticalStackLayout>

             
                <VerticalStackLayout x:Name="RoomsContainer"
                                    Spacing="15"/>


            </VerticalStackLayout>
        </ScrollView>
        
    </Grid>
</ContentPage>
