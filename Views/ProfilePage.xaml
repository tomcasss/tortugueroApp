<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="tortugueroApp.Views.ProfilePage"
             BackgroundColor="{StaticResource SandBeige}"
             Title="Profile">

    <Grid>
       
        <Image Source="https://lh3.googleusercontent.com/aida-public/AB6AXuBYWuoISswzHmcPPw4w284dvpD0bsXCxvD30VrY1bfU_vFN0NwTqbBHJHAbbAJjrNEPh0jvzGQtKIwRpeSZmWC9I--siwIG3n13lL4ITia6RzGM1WjEJ4NY_e0pf91vAjifUQT9ZlJLdfyjM6MTSOnyPaWadQsrglcB-XCJWGbVg92g8u3I8stm2ZpMNCZ0SugbhtOvvjcl0kUAhwwKhkFdnuiDeMnhRolzjrobNDXvoZiWHEhhwzRIl2om6Mt1sPDm4yXKnLGfqzk"
               Aspect="AspectFill"
               Opacity="0.3" />

        <ScrollView>
            <VerticalStackLayout Padding="16" Spacing="20">

               
                <Frame Padding="24"
                       CornerRadius="20"
                       HasShadow="True"
                       BorderColor="Transparent"
                       Margin="0,20,0,0"
                       BackgroundColor="White">
                    <VerticalStackLayout Spacing="12">
                        
                      
                        <Label x:Name="AvatarLabel"
                               Text="ðŸ‘¤"
                               FontSize="64"
                               HorizontalTextAlignment="Center"
                               Margin="0,10,0,10" />
                        
                    
                        <Label x:Name="NameLabel"
                               Text="Guest"
                               FontSize="26"
                               FontAttributes="Bold"
                               TextColor="{StaticResource ForestGreen}"
                               HorizontalTextAlignment="Center" />
                        
                        <Entry x:Name="NameEntry"
                               IsVisible="False"
                               Placeholder="Full Name"
                               FontSize="24"
                               FontAttributes="Bold"
                               TextColor="{StaticResource ForestGreen}"
                               HorizontalTextAlignment="Center"
                               BackgroundColor="Transparent" />
                        
                        <Label x:Name="EmailLabel"
                               Text="You are not logged in"
                               FontSize="14"
                               TextColor="{StaticResource OceanBlue}"
                               Opacity="0.8"
                               HorizontalTextAlignment="Center"
                               Margin="0,0,0,10" />
                               
                    </VerticalStackLayout>
                </Frame>

                
                <StackLayout x:Name="UserInfoSection" IsVisible="False" Spacing="12">
                    
                    <Label Text="Personal Information"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{StaticResource ForestGreen}"
                           Margin="0,10,0,0" />

                 
                    <Frame Padding="16"
                           CornerRadius="12"
                           HasShadow="False"
                           BorderColor="{StaticResource ForestGreen}"
                           BackgroundColor="White">
                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="12">
                            <Image Grid.Column="0"
                                   Source="person.png"
                                   WidthRequest="24"
                                   HeightRequest="24" />
                            <VerticalStackLayout Grid.Column="1" Spacing="2">
                                <Label Text="Username"
                                       FontSize="12"
                                       TextColor="{StaticResource ForestGreen}"
                                       Opacity="0.7" />
                                <Label x:Name="UsernameLabel"
                                       Text="-"
                                       FontSize="16"
                                       TextColor="{StaticResource ForestGreen}" />
                                <Entry x:Name="UsernameEntry"
                                       IsVisible="False"
                                       Placeholder="Username"
                                       FontSize="16"
                                       TextColor="{StaticResource ForestGreen}"
                                       BackgroundColor="Transparent" />
                            </VerticalStackLayout>
                        </Grid>
                    </Frame>

                 
                    <Frame Padding="16"
                           CornerRadius="12"
                           HasShadow="False"
                           BorderColor="{StaticResource ForestGreen}"
                           BackgroundColor="White">
                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="12">
                            <Image Grid.Column="0"
                                   Source="phone.png"
                                   WidthRequest="24"
                                   HeightRequest="24" />
                            <VerticalStackLayout Grid.Column="1" Spacing="2">
                                <Label Text="Phone"
                                       FontSize="12"
                                       TextColor="{StaticResource ForestGreen}"
                                       Opacity="0.7" />
                                <Label x:Name="PhoneLabel"
                                       Text="-"
                                       FontSize="16"
                                       TextColor="{StaticResource ForestGreen}" />
                                <Entry x:Name="PhoneEntry"
                                       IsVisible="False"
                                       Placeholder="Phone Number"
                                       FontSize="16"
                                       Keyboard="Telephone"
                                       TextColor="{StaticResource ForestGreen}"
                                       BackgroundColor="Transparent" />
                            </VerticalStackLayout>
                        </Grid>
                    </Frame>

             
                    <Frame Padding="16"
                           CornerRadius="12"
                           HasShadow="False"
                           BorderColor="{StaticResource ForestGreen}"
                           BackgroundColor="White">
                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="12">
                            <Image Grid.Column="0"
                                   Source="calendar.png"
                                   WidthRequest="24"
                                   HeightRequest="24" />
                            <VerticalStackLayout Grid.Column="1" Spacing="2">
                                <Label Text="Member Since"
                                       FontSize="12"
                                       TextColor="{StaticResource ForestGreen}"
                                       Opacity="0.7" />
                                <Label x:Name="MemberSinceLabel"
                                       Text="-"
                                       FontSize="16"
                                       TextColor="{StaticResource ForestGreen}" />
                            </VerticalStackLayout>
                        </Grid>
                    </Frame>

                   
                    <Button x:Name="EditButton"
                            Text="Edit Profile"
                            FontSize="16"
                            FontAttributes="Bold"
                            TextColor="White"
                            BackgroundColor="{StaticResource OceanBlue}"
                            HeightRequest="50"
                            CornerRadius="12"
                            Margin="0,10,0,0"
                            Clicked="OnEditProfileClicked" />

                    <Button x:Name="SaveButton"
                            Text="Save Changes"
                            IsVisible="False"
                            FontSize="16"
                            FontAttributes="Bold"
                            TextColor="White"
                            BackgroundColor="{StaticResource ForestGreen}"
                            HeightRequest="50"
                            CornerRadius="12"
                            Margin="0,10,0,0"
                            Clicked="OnSaveProfileClicked" />

                </StackLayout>

              
                <VerticalStackLayout x:Name="LoggedInActions" IsVisible="False" Spacing="12" Margin="0,20,0,0">
                    
                    <Button Text="Back to Menu"
                            FontSize="16"
                            FontAttributes="Bold"
                            TextColor="{StaticResource ForestGreen}"
                            BackgroundColor="Transparent"
                            BorderColor="{StaticResource ForestGreen}"
                            BorderWidth="2"
                            HeightRequest="50"
                            CornerRadius="12"
                            Clicked="OnBackToMenuClicked" />

                    <Button Text="Logout"
                            FontSize="16"
                            FontAttributes="Bold"
                            TextColor="White"
                            BackgroundColor="#C62828"
                            HeightRequest="50"
                            CornerRadius="12"
                            Clicked="OnLogoutClicked" />

                </VerticalStackLayout>

                <VerticalStackLayout x:Name="GuestActions" IsVisible="False" Spacing="12" Margin="0,20,0,0">
                    
                    <Label Text="Join our community!"
                           FontSize="16"
                           TextColor="{StaticResource ForestGreen}"
                           HorizontalTextAlignment="Center"
                           Margin="0,0,0,10" />

                    <Button Text="Login"
                            FontSize="16"
                            FontAttributes="Bold"
                            TextColor="White"
                            BackgroundColor="{StaticResource ForestGreen}"
                            HeightRequest="50"
                            CornerRadius="12"
                            Clicked="OnLoginClicked" />

                    <Button Text="Register"
                            FontSize="16"
                            FontAttributes="Bold"
                            TextColor="{StaticResource ForestGreen}"
                            BackgroundColor="Transparent"
                            BorderColor="{StaticResource ForestGreen}"
                            BorderWidth="2"
                            HeightRequest="50"
                            CornerRadius="12"
                            Clicked="OnRegisterClicked" />

                    <Button Text="Back to Home"
                            FontSize="14"
                            TextColor="{StaticResource OceanBlue}"
                            BackgroundColor="Transparent"
                            HeightRequest="45"
                            Clicked="OnBackToHomeClicked" />

                </VerticalStackLayout>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>

</ContentPage>
