<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="tortugueroApp.Views.MyBookingsPage"
             Shell.NavBarIsVisible="False"
             BackgroundColor="#F8F9FA">

    <Grid RowDefinitions="Auto,*">
        
        <Grid Grid.Row="0" 
              BackgroundColor="#11d4b4" 
              Padding="20,40,20,20"
              ColumnDefinitions="Auto,*">
            
            <Button Grid.Column="0"
                    Text="â†"
                    FontSize="24"
                    TextColor="White"
                    BackgroundColor="Transparent"
                    Clicked="OnBackClicked"/>
            
            <Label Grid.Column="1"
                   Text="My Bookings"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="White"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"/>
        </Grid>

       
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="20" Spacing="15">
                
            
                <VerticalStackLayout x:Name="EmptyBookingsView"
                                    IsVisible="False"
                                    Spacing="20"
                                    VerticalOptions="Center"
                                    HorizontalOptions="Center"
                                    Margin="0,100,0,0">
                    <Label Text="ðŸ“‹"
                           FontSize="80"
                           HorizontalOptions="Center"/>
                    <Label Text="You have no bookings"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="#2E4E49"
                           HorizontalOptions="Center"/>
                    <Label Text="Your paid bookings will appear here"
                           FontSize="14"
                           TextColor="Gray"
                           HorizontalOptions="Center"/>
                </VerticalStackLayout>

           
                <VerticalStackLayout x:Name="BookingsContainer"
                                    Spacing="15"/>

            </VerticalStackLayout>
        </ScrollView>

        
        <ActivityIndicator x:Name="LoadingIndicator"
                          Grid.Row="1"
                          IsRunning="False"
                          Color="#11d4b4"
                          VerticalOptions="Center"
                          HorizontalOptions="Center"/>
    </Grid>

</ContentPage>
